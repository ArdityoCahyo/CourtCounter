<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.ardityodev.courtcounter.MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:background="@drawable/round_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_weight="1"
            >
            <TextView
                android:text="Team A"
                android:textSize="21dp"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/jumlaha"
                android:textColor="#ffff"
                android:text="0"
                android:textSize="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/plus3a"
                android:onClick="plus3a"
                android:text="+3 POINT"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/plus2a"
                android:onClick="plus2a"
                android:text="+2 POINT"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/plus1a"
                android:onClick="plus1a"
                android:text="Free Trow"
                android:layout_width="150dp"
                android:layout_height="50dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.64" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/round_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_weight="1"
            >
            <TextView
                android:text="Team B"
                android:textSize="21dp"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/jumlahb"
                android:textColor="#ffff"
                android:text="0"
                android:textSize="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/plus3b"
                android:onClick="plus3b"
                android:text="+3 POINT"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/plus2b"
                android:onClick="plus2b"
                android:text="+2 POINT"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:drawable="@drawable/rad_button"
                android:id="@+id/plus1b"
                android:onClick="plus1b"
                android:text="Free Trow"
                android:layout_width="150dp"
                android:layout_height="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.64" />
        </LinearLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:onClick="first"
                    app:backgroundTint="#ffff"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton3"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="reset"
                    app:backgroundTint="#ffff"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_settings_backup_restore_black_24dp" />
            </LinearLayout>
</RelativeLayout>